{% extends '::base.html.twig' %}

{% block body %}

<h2>{{ "season.ranking"|trans }}</h2>

<table class="table">
    <thead>
        <tr>
            <th>{{ "season.ranking_table.player"|trans }}</th>
            <th>{{ "season.ranking_table.points"|trans }}</th>
            <th>{{ "season.ranking_table.wins"|trans }}</th>
            <th>{{ "season.ranking_table.meetings"|trans }}</th>
            <th>{{ "season.ranking_table.bouts"|trans }}</th>
            <th>{{ "season.ranking_table.power"|trans }}</th>
            <th>{{ "season.ranking_table.efficiency"|trans }}</th>
        </tr>
    </thead>
    <tbody>
{% for player in ranking %}
        <tr>
            <td>{{ player.username }}</td>
            <td>{{ player.points|number_format(2, ',') }}</td>
            <td>{{ player.wins|number_format(2, ',') }}</td>
            <td>{{ player.meetings }}</td>
            <td>{{ player.bouts }}</td>
            <td>{{ player.power|localizednumber }}</td>
            <td>{{ player.efficiency|localizednumber('percent') }}%</td>
        </tr>
{% endfor %}
    </tbody>
</table>

<h2>{{ "season.meetings"|trans }}</h2>

<table class="table">
    <thead>
        <tr>
            <th>{{ "season.meetings_table.date"|trans }}</th>
            <th>{{ "season.meetings_table.users"|trans }}</th>
            <th>{{ "season.meetings_table.bouts"|trans }}</th>
            <th>{{ "season.meetings_table.games"|trans }}</th>
        </tr>
    </thead>
    <tbody>
{% for meeting in meetings %}
        <tr>
            <td>
                <a href="{{ path('mdurys_gupek_meeting_show', { 'id': meeting.id }) }}">{{ meeting.date|localizeddate('long', 'none') }}</a>
            </td>
            <td>
               {{ meeting.users }}
            </td>
            <td>
                {{ meeting.bouts }}
            </td>
            <td>
                {{ meeting.games }}
            </td>
{% endfor %}
    </tbody>
</table>

{% endblock %}